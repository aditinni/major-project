<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Summarize Text</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            font-family: 'Arial', sans-serif;
        }

        body {
            background: linear-gradient(135deg, #1e3c72, #2a5298);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            color: #ffffff;
        }

        .container {
            background-color: #2d2f36;
            border-radius: 15px;
            padding: 40px;
            max-width: 600px;
            width: 100%;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
            text-align: center;
        }

        h1 {
            font-size: 2.5rem;
            color: #00b4d8;
            margin-bottom: 20px;
            font-weight: bold;
        }

        form {
            margin-bottom: 25px;
        }

        textarea {
            width: 100%;
            padding: 15px;
            background-color: #404040;
            border: none;
            color: #e0e0e0;
            border-radius: 10px;
            font-size: 1rem;
            margin-top: 15px;
            resize: none;
            box-shadow: inset 0 2px 5px rgba(0, 0, 0, 0.2);
            transition: background-color 0.3s, box-shadow 0.2s;
        }

        textarea:focus {
            outline: none;
            background-color: #505050;
            box-shadow: 0 0 8px #00b4d8;
        }

        button {
            background-color: #00b4d8;
            color: #ffffff;
            padding: 12px 30px;
            border: none;
            border-radius: 5px;
            font-size: 1rem;
            cursor: pointer;
            font-weight: 600;
            transition: background-color 0.3s, box-shadow 0.2s;
        }

        button:hover {
            background-color: #0284a8;
            box-shadow: 0 4px 10px rgba(0, 180, 216, 0.3);
        }

        h2 {
            color: #00b4d8;
            font-size: 1.8rem;
            font-weight: 600;
            margin-top: 20px;
            margin-bottom: 15px;
        }

        .summary {
            background-color: #333;
            padding: 20px;
            border-radius: 10px;
            color: #d1d5db;
            text-align: left;
            margin-top: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

        .summary p {
            margin-bottom: 10px;
            padding-left: 20px;
            position: relative;
            line-height: 1.5;
        }

        .summary p::before {
            content: "â€¢";
            position: absolute;
            left: 0;
            color: #00b4d8;
            font-size: 1.2rem;
        }

        #download{
            position: relative;
            top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Text Summarizer</h1>
        <form action="/summarize" method="POST">
            <textarea name="text" rows="10" placeholder="Enter text to summarize..."></textarea>
            <br>
            <button type="submit">Summarize</button>
        </form>

        <% if (typeof summary !== 'undefined') { %>
            <h2>Summary</h2>
            <div class="summary" data-summary="<%= summary.replace(/\n/g, '\\n') %>">
                <% summary.trim().split('\n').forEach(function(point) { %>
                    <% if (point.trim()) { %> <!-- Ensure empty lines don't create extra bullets -->
                        <p><%= point %></p>
                    <% } %>
                <% }); %>
            </div>
            <button onclick="downloadSummary()" id="download">Download Summary</button>
        <% } %>
    </div>

    <script>
        function downloadSummary() {
            const summaryDiv = document.querySelector('.summary');
            if (!summaryDiv) return;
            
            const summaryContent = summaryDiv.getAttribute('data-summary').replace(/\\n/g, '\n');
            const blob = new Blob([summaryContent], { type: 'text/plain' });
            const link = document.createElement('a');
            link.href = URL.createObjectURL(blob);
            link.download = 'summary.txt';
            link.click();
            URL.revokeObjectURL(link.href); // Clean up URL object
        }
    </script>
</body>
</html>
